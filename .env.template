# Example Environment Configuration Template
# This file shows all available environment variables with example values
# DO NOT commit actual secrets to version control

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Environment (development, staging, production)
NODE_ENV=development

# Server port (use ports 10000-10999 for local development)
PORT=4000

# Application URLs
APP_URL=http://localhost:4000
FRONTEND_URL=http://localhost:3000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@db:5432/sav3

# Database credentials (for migrations and utilities)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=sav3

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================

# JWT secrets (use strong, random strings in production)
JWT_SECRET=your-jwt-secret-here-minimum-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-here-minimum-32-characters
JWT_REFRESH_EXPIRES_IN=30d

# Encryption key for sensitive data (32 characters)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ===========================================
# RATE LIMITING
# ===========================================

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
RATE_LIMIT_REDIS_URL=redis://localhost:6379

# ===========================================
# MEDIA STORAGE & UPLOADS
# ===========================================

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET_NAME=your-s3-bucket-name

# MinIO Configuration (self-hosted S3 alternative)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=sav3-media
MINIO_USE_SSL=false

# Media configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4
UPLOAD_DIR=./uploads
MEDIA_PROXY_URL=http://localhost:4000

# ===========================================
# PUSH NOTIFICATIONS
# ===========================================

# Firebase configuration for push notifications
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# ===========================================
# EMAIL CONFIGURATION
# ===========================================

# SMTP configuration for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@sav3.app

# ===========================================
# PAYMENTS (STRIPE)
# ===========================================

# Stripe configuration for subscription payments
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# ===========================================
# CACHING & SESSIONS
# ===========================================

# Redis configuration
REDIS_URL=redis://localhost:6379

# ===========================================
# MONITORING & LOGGING
# ===========================================

# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# Prometheus metrics
PROMETHEUS_METRICS_ENABLED=true

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/disable features
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_GEOSPATIAL=true
ENABLE_ANALYTICS=true
DISABLE_PAYMENTS=false

# ===========================================
# DEPLOYMENT & INFRASTRUCTURE
# ===========================================

# Netlify configuration (for frontend deployment)
NETLIFY_AUTH_TOKEN=your-netlify-auth-token
NETLIFY_SITE_ID=your-netlify-site-id

# Docker and container configuration
COMPOSE_PROJECT_NAME=sav3-backend

# PgBouncer configuration
USE_PGBOUNCER=false

# ===========================================
# BACKUP & MAINTENANCE
# ===========================================

# Backup configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"

# ===========================================
# SECURITY HEADERS
# ===========================================

# Security configuration
SECURITY_HELMET_ENABLED=true
HSTS_MAX_AGE=31536000

# ===========================================
# SSL/TLS CONFIGURATION
# ===========================================

# SSL certificate paths (for HTTPS)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key.pem

# ===========================================
# VAULT & SECRETS MANAGEMENT
# ===========================================

# HashiCorp Vault configuration
VAULT_ADDR=https://your-vault-server.com:8200
VAULT_TOKEN=your-vault-token

# ===========================================
# CDN CONFIGURATION
# ===========================================

# Content Delivery Network
CDN_URL=https://cdn.your-domain.com
CDN_ACCESS_KEY=your-cdn-access-key
CDN_SECRET_KEY=your-cdn-secret-key

# ===========================================
# DEVELOPMENT & DEBUGGING
# ===========================================

# Development helpers
DOTENV_KEY=your-dotenv-key-for-encrypted-env-files
SAFE_START=false

# Prisma configuration
PRISMA_CLIENT_ENGINE_TYPE=library
PRISMA_QUERY_ENGINE_BINARY=/path/to/query/engine
PRISMA_QUERY_ENGINE_LIBRARY=/path/to/query/engine

# ===========================================
# THIRD-PARTY INTEGRATIONS
# ===========================================

# Analytics and tracking
ANALYTICS_TRACKING_ID=your-google-analytics-id
MIXPANEL_TOKEN=your-mixpanel-token

# Error tracking
SENTRY_DSN=your-sentry-dsn
ROLLBAR_ACCESS_TOKEN=your-rollbar-token

# ===========================================
# PERFORMANCE & OPTIMIZATION
# ===========================================

# Database connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# Cache settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ===========================================
# COMPLIANCE & LEGAL
# ===========================================

# GDPR and privacy settings
DATA_RETENTION_DAYS=2555
USER_DATA_EXPORT_ENABLED=true
RIGHT_TO_BE_FORGOTTEN_ENABLED=true

# ===========================================
# EXPERIMENTAL FEATURES
# ===========================================

# Beta features (use with caution)
ENABLE_AI_FEATURES=false
ENABLE_BETA_UI=false
ENABLE_DEBUG_MODE=false</content>
