{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "env": {
    "node": true,
    "es2020": true
  },
  "rules": {
    "no-explicit-any": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }
    ],
    "@typescript-eslint/ban-ts-comment": [
      "warn",
      { "ts-ignore": "allow-with-description" }
    ],
    "@typescript-eslint/no-require-imports": "off",
    "@typescript-eslint/no-var-requires": "off",
    "no-unused-expressions": "off",
    "@typescript-eslint/no-unused-expressions": "warn"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "src/generated/",
    "prisma/migrations/",
    "**/*.generated.ts",
    "**/*.d.ts"
  ],
  "overrides": [
    {
      "files": ["docker/media-proxy/src/**/*.ts"],
      "parserOptions": {
        "project": ["docker/media-proxy/tsconfig.json"]
      }
    },
    {
      "files": ["sav3-frontend/mobile/**/*.{ts,tsx}"],
      "parserOptions": {
        "project": ["sav3-frontend/mobile/tsconfig.eslint.json"],
        "ecmaFeatures": {
          "jsx": true
        }
      },
      "rules": {
        "@typescript-eslint/explicit-module-boundary-types": "off"
      }
    },
    {
      "files": ["src/backend/**/*.js", "docker/**/*.js"],
      "parser": "espree",
      "rules": {
        "@typescript-eslint/no-var-requires": "off",
        "@typescript-eslint/no-require-imports": "off",
        "no-undef": "off"
      }
    },
    {
      "files": ["docker/migration-controller/**/*.js"],
      "rules": {
        "no-inner-declarations": "off",
        "no-case-declarations": "off"
      }
    },
    {
      "files": ["src/utils/logger.ts", "docker/media-proxy/src/utils/**"],
      "rules": {
        "@typescript-eslint/no-var-requires": "off",
        "@typescript-eslint/no-require-imports": "off"
      }
    }
  ]
}
