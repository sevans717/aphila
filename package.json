{
  "name": "sav3-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "reconcile:dry": "node --no-warnings -r ts-node/register ./scripts/run-reconcile.ts --dry",
    "reconcile": "node -r ts-node/register ./scripts/run-reconcile.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "route:map": "node ./scripts/generate-route-map.js",
    "route:enrich": "node ./scripts/enrich-route-map.js",
    "route:resolve": "node ./scripts/resolve-handler-exports.js",
    "route:full": "npm run route:map && npm run route:enrich && npm run route:resolve",
    "lint": "eslint \"src/**/*.{ts,js,tsx}\" \"docker/**/*.{ts,js}\" \"docker/media-proxy/src/**/*.{ts,js}\" --ext .ts,.js,.tsx --ignore-pattern src/generated --no-error-on-unmatched-pattern",
    "format": "prettier --write \"**/*.{ts,js,json,md,css}\"",
    "typecheck": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node --transpile-only prisma/seed.ts",
    "db:backup": "pwsh -NoProfile -ExecutionPolicy Bypass -File ./scripts/db-backup.ps1",
    "db:restore": "pwsh -NoProfile -ExecutionPolicy Bypass -File ./scripts/db-restore.ps1",
    "db:refresh-views": "psql $DATABASE_URL -c \"SELECT refresh_analytics_views();\"",
    "smoke": "ts-node ./systematic-tester.ts",
    "test": "jest \"tests/integration\" --runInBand",
    "test:integration:db": "npm run db:test:run",
    "db:test:up": "docker compose -f docker-compose.test.yml up -d --wait",
    "db:test:down": "docker compose -f docker-compose.test.yml down",
    "db:test:run": "npm run db:test:up && cross-env NODE_ENV=test npx jest --runInBand && npm run db:test:down",
    "docs:lint": "echo 'Markdown linting disabled by project config'",
    "env:gen": "pwsh -NoProfile -ExecutionPolicy Bypass -File ./scripts/generate-env.ps1",
    "serve:public": "npx http-server ./public -p 8888"
  },
  "watch": {
    "watch:changes": "pwsh -NoProfile -ExecutionPolicy Bypass -File ./scripts/watch-changes.ps1"
  },
  "dependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/minio": "^7.1.0",
    "@types/multer": "^2.0.0",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.3.1",
    "geolib": "^3.3.4",
    "helmet": "^8.1.0",
    "ioredis": "^5.3.2",
    "isomorphic-dompurify": "^2.26.0",
    "jsonwebtoken": "^9.0.2",
    "minio": "^8.0.5",
    "multer": "^2.0.2",
    "pg": "^8.10.0",
    "pg-format": "^1.0.4",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "prom-client": "^15.1.3",
    "rate-limit-redis": "^4.2.0",
    "sharp": "^0.34.3",
    "socket.io": "^4.8.1",
    "stripe": "^11.18.0",
    "uuid": "^11.1.0",
    "web-push": "^3.6.7",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@prisma/client": "^6.15.0",
    "@types/axios": "^0.9.36",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.11",
    "@types/pino": "^7.0.4",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/web-push": "^3.3.2",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.52.0",
    "jest": "^30.0.5",
    "markdownlint-cli": "^0.35.0",
    "prettier": "^3.0.0",
    "prisma": "^6.15.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.0"
  }
}
